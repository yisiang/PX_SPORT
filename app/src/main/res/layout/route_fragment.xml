<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <me.crosswall.lib.coverflow.core.LinkagePagerContainer
        android:id="@+id/lb_route_pager_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        >
        <!--上-->
        <android.support.v4.view.LinkagePager
            android:id="@+id/lb_route_up_pager"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            />
    </me.crosswall.lib.coverflow.core.LinkagePagerContainer>

    <!--下-->
    <android.support.v4.view.LinkagePager
        android:id="@+id/lb_route_bottom_pager"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:velocity="150"
        android:layout_below="@id/lb_route_pager_container"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

</RelativeLayout>
