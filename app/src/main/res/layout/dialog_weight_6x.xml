<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <!--標題-->
    <TextView
        android:id="@+id/weight_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="體重"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/weight_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_below="@id/weight_title"
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weight_picker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/weight_divider"
        android:gravity="center"
        >
        <NumberPicker
            android:id="@+id/weight_heft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KG"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/weight_picker_layout"
        >
        <Button
            android:id="@+id/weight_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="確定"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/weight_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_weight="1"
            />
    </LinearLayout>
</RelativeLayout>
